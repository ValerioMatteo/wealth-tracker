# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# API Keys (Backend - Edge Functions only, mai esporre nel frontend!)
# Queste vanno in Supabase Edge Functions come secrets
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
COINGECKO_API_KEY=your_coingecko_key
METALS_API_KEY=your_metals_api_key

# Open Banking (TrueLayer)
TRUELAYER_CLIENT_ID=your_truelayer_client_id
TRUELAYER_CLIENT_SECRET=your_truelayer_client_secret

# Sentry (Error Tracking)
VITE_SENTRY_DSN=your_sentry_dsn

# PostHog (Analytics)
VITE_POSTHOG_KEY=your_posthog_key
VITE_POSTHOG_HOST=https://app.posthog.com

# Environment
VITE_ENV=development

# Feature Flags
VITE_ENABLE_OPEN_BANKING=false
VITE_ENABLE_TAX_CALCULATOR=true
VITE_ENABLE_CRYPTO=true
